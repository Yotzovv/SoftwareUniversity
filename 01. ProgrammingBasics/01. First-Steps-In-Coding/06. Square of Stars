using System;
class SquareofStars
{
	static void Main(string[] args)
	{
		//user input
		int n = int.Parse(Console.ReadLine ());      

		//first roll
		string roll = new String('*', n);
		Console.WriteLine(roll);

		//middle part
		string space = new String(' ', (n-2)); 
		for(int i=2;i<n;i++)
		{
			Console.WriteLine("*{0}*", space);
		}
    
		//last roll
		Console.WriteLine(roll);
	}
}
