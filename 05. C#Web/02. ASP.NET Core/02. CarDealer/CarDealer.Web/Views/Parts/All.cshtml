@model PartPageListingModel

@{
    ViewData["Title"] = "All Parts";
}

<h2>
    @ViewData["Title"]
    <a class="btn btn-primary" href="/parts/create">Add Part</a>
</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Supplier
            </th>
            <th>
                Supplier Name
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model.Parts)
        {
            <tr>
                <th>
                    @part.Name
                </th>
                <th>
                    @part.Price.ToString("f2");
                </th>
                <th>
                    @part.Quantity
                </th>
                <th>
                    @part.SupplierName
                </th>
                <th>
                    <a href="/parts/edit/@part.Id" class="btn btn-warning">Edit</a>
                    <a href="/parts/delete/@part.Id" class="btn btn-danger">Delete</a>
                </th>
            </tr>
        }
    </tbody>
</table>

@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextPage = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<div class="text-center">
    <ul class="pagination">
        <li class="page-item @previousDisabled">
            <a class="page-link @previousDisabled" href="/parts/all?page=@Model.PreviousPage" aria-label="Previous" tabindex="-1">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : string.Empty)"><a class="page-link" href="/parts/all?page=@i">@i</a></li>
        }

        <li class="page-item @nextPage">
            <a class="page-link @nextPage" href="/parts/all?page=@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</div>
